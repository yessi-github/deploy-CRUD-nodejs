<!--   The idea is to use a header to override the method. The following example 
    is to override POST method to create PUT and DELETE method.    --> 
    <!--<form action="/api/product/{{_id}}" method="PUT">-->
    <form action="/api/product/{{products._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

ID <input type="text" disabled value ="{{products._id}}"  name = "_id"> <br>
    Nombre <input type="text"  value="{{products.name}}" name="name"><br>
    Price <input type="number" value="{{products.price}}" name="price"><br>
     Categoria<select name = "category" value="{{products.category}}">
        <option value="computers">Computers</option>
        <option value="phones">Phones</option>
        <option value="accesories">Accesories</option>
        </select><br>
     Description <input type="text"  value="{{products.description}}" name="description"><br>
      Image <input type="text"  value="{{products.image}}" name="image"><br>
     <button class="btn btn-primary" type="submit">GUARDAR</button>
    </form>